<table class="zebra-striped">
  <thead>
    <th>#</th>
    <th>Name</th>
    <th>Likes</th>
  </thead>
  <tbody>
  <% @companies.each_with_index do |company, index| %>
    <tr>
      <td><%= index + 1 %></td>
      <td><%= company.name %></td>
      <td><%= company.likes %></td>
    </tr>
  <% end %>
  </tbody>
</table>
